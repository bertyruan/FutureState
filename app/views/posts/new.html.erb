<h1> Berty Left </h1>

<!-- when a form has the :url and :post object, the schema is called a CREATE-->
<%= link_to "Back", posts_path %>

<%= form_for :post, url: posts_path do |f| %>
  <p>
  	<!-- The :title and :text paramaters only serve as an id. They can be named whatever I want -->
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>