<h1>Listing posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Options</th>
  </tr>
 

 <!-- @posts and not @post as defined in the controller file-->
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to "Show", post %></td>
      <td><%= link_to "Edit", edit_post_path(post) %>
    </tr>
  <% end %>
</table>

<%= link_to "New Post", new_post_path %>